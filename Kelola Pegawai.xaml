<Page x:Class="MuseumApp.Kelola_Pegawai"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuseumApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
              Stretch="Fill"
              Width="920"
              Height="600"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Opacity="0.75">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Rectangle HorizontalAlignment="Center"
                  Height="500"
                  Width="800"
                  VerticalAlignment="Center" Fill="White" Opacity="0.4">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid Margin="20,20,20,20">
            <Border Background="White"
                    CornerRadius="20,20,20,20">
            </Border>

            <TextBlock
                       Text="Kelola Pegawai"
                       HorizontalAlignment="Left"
                       Margin="128,20,0,0"
                       VerticalAlignment="Top"
                       FontFamily="Plus Jakarta Sans Bold"
                       FontSize="28"
                       Foreground="#2D2B70"/>

            <Button x:Name="BtnBack" Content="← Kembali"
        FontFamily="Plus Jakarta Sans Bold"
        FontSize="14"
        Height="32"
        Width="100"
        Background="Transparent"
        Foreground="#2D2B70"
        BorderBrush="#2D2B70"
        Margin="20,20,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Click="BtnBack_Click"/>

            <StackPanel Orientation="Horizontal" Margin="20,60,20,0">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="NIPP" FontWeight="Bold"/>
                    <TextBox x:Name="txtNIPP" Width="150" Height="30"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Nama Pegawai" FontWeight="Bold"/>
                    <TextBox x:Name="txtNama" Width="300" Height="30"/>
                </StackPanel>
            </StackPanel>

            <DataGrid x:Name="dataGridPegawai" FontFamily="Plus Jakarta Sans Medium" Margin="20,75,20,75" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow" SelectionChanged="dataGridPegawai_SelectionChanged" Background="White" BorderBrush="{x:Null}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NIPP" Binding="{Binding NIPP}" Width="Auto"/>
                    <DataGridTextColumn Header="Nama Pegawai" Binding="{Binding NamaPegawai}" />
                    <DataGridTextColumn Header="Status Karyawan" Binding="{Binding statusKaryawan}" />
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="BtnTambahPegawai" Content="Tambah"
                    FontFamily="Plus Jakarta Sans Bold"
                    FontSize="16"
                    Height="36"
                    Width="136"
                    Background="#FF2D2B70"
                    Foreground="White"
                    Margin="128,352,496,22" Click="BtnTambahPegawai_Click"/>

            <Button x:Name="BtnEditPegawai" Content="Edit"
                    FontFamily="Plus Jakarta Sans Bold"
                    FontSize="16"
                    Height="36"
                    Width="136"
                    Background="White"
                    Foreground="#F26924"
                    Margin="494,352,130,22" BorderBrush="#FF2D2B70" Click="BtnEditPegawai_Click"/>
        </Grid>
    </Grid>
</Page>
