<Page x:Class="MuseumApp.Kelola_Pegawai"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuseumApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kelola_Pegawai">

    <Grid Background="White">
        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
              Stretch="Fill"
              Width="920"
              Height="600"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Opacity="0.75">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Rectangle HorizontalAlignment="Center"
                  Height="500"
                  Width="800"
                  VerticalAlignment="Center" Fill="White" Opacity="0.4">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid Margin="20,20,20,20">
            <Border Background="White"
                    CornerRadius="20,20,20,20">
            </Border>

            <TextBlock
                       Text="Kelola Pegawai"
                       HorizontalAlignment="Left"
                       Margin="72,20,0,0"
                       VerticalAlignment="Top"
                       FontFamily="Plus Jakarta Sans Bold"
                       FontSize="28"
                       Foreground="#2D2B70"/>
            <DataGrid x:Name="dataGridPegawai" FontFamily="Plus Jakarta Sans Medium" Margin="20,75,20,75" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow" SelectionChanged="dataGridPegawai_SelectionChanged" Background="White" BorderBrush="{x:Null}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NIPP" Binding="{Binding NIPP}" Width="200"/>
                    <DataGridTextColumn Header="Nama Pegawai" Binding="{Binding NamaPegawai}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="BtnTambah" Content="Tambah"
                    FontFamily="Plus Jakarta Sans Bold"
                    FontSize="16"
                    Height="36"
                    Width="136"
                    Background="#FF2D2B70"
                    Foreground="White"
                    Margin="107,352,517,22" Click="BtnTambah_Click"/>

            <Button x:Name="BtnEdit" Content="Edit"
                    FontFamily="Plus Jakarta Sans Bold"
                    FontSize="16"
                    Height="36" 
                    Width="136"
                    Background="White"
                    Foreground="#F26924"
                    Margin="312,352,312,22" BorderBrush="#FF2D2B70" Click="BtnEdit_Click"/>

            <Button x:Name="BtnHapus" Content="Hapus"
                FontFamily="Plus Jakarta Sans Bold"
                FontSize="16"
                Height="36"
                Width="136"
                Background="#F26924"
                Foreground="White"
                Margin="505,352,119,22" Click="BtnHapus_Click"/>
        </Grid>
    </Grid>
</Page>
