<Page x:Class="MuseumApp.Kelola_Koleksi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuseumApp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Kelola Koleksi">

    <Page.Resources>
        <BlurEffect x:Key="PageBlurEffect" Radius="7"/>
        <DropShadowEffect x:Key="CardShadowEffect" ShadowDepth="2" BlurRadius="10" Color="#FFBBBBBB" Opacity="0.3"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="5,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2D2B70"/>
            <Setter Property="BorderBrush" Value="#FFA0A0A0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0A2D2B70"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BaseActionButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="#FF2D2B70"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A479A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#F26924"/>
            <Setter Property="BorderBrush" Value="#F26924"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="#F26924"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D85C1F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AnalysisButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
            <Setter Property="Background" Value="#FF008080"/>
            <Setter Property="Content" Value="Analisis"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
               Stretch="UniformToFill" 
               Opacity="0.60" Effect="{StaticResource PageBlurEffect}"/>

        <Border Background="#EBFFFFFF" CornerRadius="15" 
                Margin="30"  Effect="{StaticResource CardShadowEffect}">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnBack" Content="← Kembali" 
                            Style="{StaticResource BackButtonStyle}" 
                            Click="BtnBack_Click"/>

                    <TextBlock Text="Kelola Koleksi"
                               Grid.Column="1"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontFamily="Plus Jakarta Sans Bold" FontSize="26" 
                               Foreground="#2D2B70"/>
                </Grid>

                <DataGrid x:Name="dataGridKoleksi" Grid.Row="1"
                          FontFamily="Plus Jakarta Sans Medium"
                          AutoGenerateColumns="False" 
                          CanUserSortColumns="True" 
                          IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow" 
                          SelectionChanged="dataGridKoleksi_SelectionChanged"
                          Background="White" 
                          BorderBrush="#FFD6D6D6" BorderThickness="1"
                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          AlternatingRowBackground="#FFF7F9FC" RowHeight="30" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Koleksi" Binding="{Binding KoleksiID}" Width="Auto" MinWidth="100" SortMemberPath="KoleksiID"/>
                        <DataGridTextColumn Header="Jenis Koleksi" Binding="{Binding JenisKoleksi}" Width="*" MinWidth="200" SortMemberPath="JenisKoleksi"/>
                        <DataGridTextColumn Header="Deskripsi" Binding="{Binding Deskripsi}" Width="2*" MinWidth="250" SortMemberPath="Deskripsi"/>
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FFE0E4F0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#FF2D2B70"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#FFC0C8D8"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFCADCFF"/>
                                    <Setter Property="Foreground" Value="#FF1C3D7E"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE8EFFC" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="BtnTambah" Content="Tambah" Style="{StaticResource AddButtonStyle}" Click="BtnTambah_Click"/>
                    <Button x:Name="BtnEdit" Content="Edit" Style="{StaticResource EditButtonStyle}" Margin="10,0,0,0" Click="BtnEdit_Click"/>
                    <Button x:Name="BtnHapus" Content="Hapus" Style="{StaticResource DeleteButtonStyle}" Margin="10,0,0,0" Click="BtnHapus_Click"/>
                    <Button x:Name="BtnAnalisis" Style="{StaticResource AnalysisButtonStyle}" Margin="10,0,0,0" Click="BtnAnalisis_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
