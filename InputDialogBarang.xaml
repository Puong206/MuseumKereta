<Window x:Class="MuseumApp.InputDialogBarang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuseumApp"
        mc:Ignorable="d" Height="450" Width="800">
    <Grid x:Name="InputDialogBarang">
        <Image Margin="0,0,0,0" Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg" Stretch="Fill" Opacity="0.6">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Frame HorizontalAlignment="Center"
       VerticalAlignment="Center"
       Width="364"
       Background="#FFF0F2F4" Navigated="Frame_Navigated_2">
            <Frame.Content>
                <StackPanel Orientation="Vertical"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="34,20,34,20">
                    <TextBlock Text="Barang"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16"
                        VerticalAlignment="Top"
                        FontFamily="Plus Jakarta Sans Bold"
                        FontSize="20"
                        FontStyle="Normal"
                        Foreground="#2D2B70"
                        LineHeight="20"/>
                    <TextBlock x:Name="IDBarang" Text="ID Barang" Margin="0,0,0,2"
                       RenderTransformOrigin="-0.711,0.67"
                       Width="203"
                       FontFamily="Plus Jakarta Sans Medium"
                       Foreground="#2D2B70"/>
                    <TextBox x:Name="IDBarangTextBox"
                         HorizontalAlignment="Center"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center"
                         Width="204"
                         Background="#FFD9D9D9"
                         TextChanged="IDBarangTextBox_TextChanged"/>
                    
                    <TextBlock x:Name="NamaBarang" Text="Nama Barang" Margin="0,4,0,2"
                       RenderTransformOrigin="-0.711,0.67"
                       Width="200"
                       FontFamily="Plus Jakarta Sans Medium"
                       Foreground="#2D2B70"/>
                    <TextBox x:Name="NamaBarangTextBox"
                         HorizontalAlignment="Center"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center"
                         Width="204"
                         Background="#FFD9D9D9"
                         TextChanged="NamaBarangTextBox_TextChanged"/>

                    <TextBlock x:Name="cbKoleksiID" Text="ID Koleksi" Margin="0,4,0,2"
   RenderTransformOrigin="-0.711,0.67"
   Width="200"
   FontFamily="Plus Jakarta Sans Medium"
   Foreground="#2D2B70"/>
                    <TextBox x:Name="IDKoleksiTextBox"
     HorizontalAlignment="Center"
     TextWrapping="Wrap"
     VerticalAlignment="Center"
     Width="204"
     Background="#FFD9D9D9"
     TextChanged="IDKoleksiTextBox_TextChanged"/>

                    <TextBlock x:Name="TahunPembuatanBarang" Text="Tahun Pembuatan" Margin="0,4,0,2"
                               RenderTransformOrigin="-0.711,0.67"
                               Width="200"
                               FontFamily="Plus Jakarta Sans Medium"
                               Foreground="#2D2B70"/>
                    <TextBox x:Name="TahunPembuatanTextBox"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             Width="204"
                             Background="#FFD9D9D9"
                             TextChanged="TahunPembuatanTextBox_TextChanged"/>

                    <TextBlock x:Name="AsalBarangED" Text="Asal Barang" Margin="0,4,0,2"
                               RenderTransformOrigin="-0.711,0.67"
                               Width="200"
                               FontFamily="Plus Jakarta Sans Medium"
                               Foreground="#2D2B70"/>
                    <TextBox x:Name="AsalBarangTextBox"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             Width="204"
                             Background="#FFD9D9D9"
                             TextChanged="AsalBarangTextBox_TextChanged"/>

                    <TextBlock x:Name="DeskripsiBarang" Text="Deskripsi" Margin="0,4,0,2"
                               RenderTransformOrigin="-0.711,0.67"
                               Width="200"
                               FontFamily="Plus Jakarta Sans Medium"
                               Foreground="#2D2B70"/>
                    <TextBox x:Name="DeskripsiTextBox"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             Width="204"
                             Background="#FFD9D9D9"
                             TextChanged="DeskripsiTextBox_TextChanged"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="Simpan" Content="Simpan"
                                FontFamily="Plus Jakarta Sans Bold"
                                Foreground="#ffffff"
                                Width="60"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,16,8,2" BorderBrush="{x:Null}"
                                Background="#FFF26924"
                                Click="Simpan_Click"/>
                        <Button x:Name="Batal" Content="Batal"
                                FontFamily="Plus Jakarta Sans Bold"
                                Foreground="#FFF26924"
                                Width="60"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,16,0,2" BorderBrush="{x:Null}"
                                Background="White"
                                Click="Simpan_Click"/>
                    </StackPanel>
                </StackPanel>
            </Frame.Content>
        </Frame>
    </Grid>
</Window>
