<Window x:Class="MuseumApp.LoginWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:MuseumApp"
       mc:Ignorable="d"
       Height="600" Width="920">
    <Grid x:Name="Login_Form">
        <Image Margin="0,0,0,0" Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg" Stretch="Fill" Opacity="0.6">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Frame HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="364"
               Background="#FFF0F2F4" Navigated="Frame_Navigated_2">
            <Frame.Content>
                <StackPanel Orientation="Vertical"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="34,20,34,20">
                    <TextBlock Text="Pendataan Museum Kereta Api"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16"
                                VerticalAlignment="Top"
                                FontFamily="Plus Jakarta Sans Bold"
                                FontSize="20"
                                FontStyle="Normal"
                                Foreground="#2D2B70"
                                LineHeight="20"/>
                    <TextBlock Text="Email" Margin="0,0,0,2"
                               RenderTransformOrigin="-0.711,0.67"
                               Width="203"
                               FontFamily="Plus Jakarta Sans Medium"
                               Foreground="#2D2B70"/>
                    <TextBox x:Name="EmailTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="204" Background="#FFD9D9D9"/>
                    <TextBlock Text="Password" Margin="0,4,0,2"
                               RenderTransformOrigin="-0.711,0.67"
                               Width="200"
                               FontFamily="Plus Jakarta Sans Medium"
                               Foreground="#2D2B70"/>
                    <PasswordBox Width="200"/>
                    <Button Content="Login"
                            FontFamily="Plus Jakarta Sans Bold"
                            Foreground="#ffffff"
                            Width="60"
                            Height="20"
                            Padding="0,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,16,0,2" BorderBrush="{x:Null}" Background="#FFF26924"/>
                </StackPanel>
            </Frame.Content>
        </Frame>
    </Grid>
</Window>