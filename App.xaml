            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="TopBarGridTransform" Storyboard.TargetProperty="Y" 
                             From="-20" To="0" Duration="0:0:0.4" BeginTime="0:0:0.1">
                <DoubleAnimation.EasingFunction>
