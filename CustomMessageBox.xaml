<Window x:Class="MuseumApp.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuseumApp"
        mc:Ignorable="d"
        Title="Pesan" Height="Auto" Width="420"
        SizeToContent="Height" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2B70"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Padding" Value="15, 0"/>
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#2D2B70"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="8"
            BorderBrush="#DDDDDD" BorderThickness="1"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              BlurRadius="20" 
                              ShadowDepth="1" 
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="IconBackground" 
                    Grid.Column="0" 
                    Background="#2D2B70" 
                    Width="80"
                    CornerRadius="8,0,0,8">
                <TextBlock x:Name="IconText"
                           Text="&#xE946;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="40"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Column="1"
                        Margin="25,20,25,20">
                <TextBlock x:Name="TitleText"
                           Text="Judul Pesan"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#2b457d"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="MessageText"
                           Text="Ini adalah isi pesan yang bisa sangat panjang dan akan turun baris secara otomatis."
                           TextWrapping="Wrap" FontFamily="14" Foreground="#1D2A4A"
                           MinHeight="40"/>

                <StackPanel x:Name="ButtonArea"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,35,0,0">
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
