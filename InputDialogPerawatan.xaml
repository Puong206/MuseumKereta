<Window x:Class="MuseumApp.InputDialogPerawatan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuseumApp"
        mc:Ignorable="d"
        Title="Input Data Perawatan" 
        Height="Auto" Width="500"
        SizeToContent="Height"     
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="DialogLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Medium"/>
            <Setter Property="Foreground" Value="#2D2B70"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="DialogInputStyle" TargetType="Control">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#FFABADB3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource DialogInputStyle}"></Style>
        <Style TargetType="DatePicker" BasedOn="{StaticResource DialogInputStyle}"></Style>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Bold"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryDialogButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#FFF26924"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#FFF26924"/>
                    <Setter Property="BorderBrush" Value="#FFF26924"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFEFEBE9"/>
                    <Setter Property="Foreground" Value="#FFF26924"/>
                    <Setter Property="BorderBrush" Value="#FFF26924"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SecondaryDialogButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#2D2B70"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2B70"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4A479A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#FDFDFD" CornerRadius="12" BorderBrush="#D0D0D0" BorderThickness="1"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#B0B0B0" Opacity="0.4"/>
        </Border.Effect>

        <StackPanel Orientation="Vertical" Margin="25,20,25,25">
            <TextBlock Text="Input Detail Perawatan" HorizontalAlignment="Center" Margin="0,0,0,25"
                       FontFamily="Plus Jakarta Sans Bold" FontSize="22" Foreground="#2D2B70"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID Barang:" Style="{StaticResource DialogLabelStyle}" Margin="0,0,10,10"/>
                <TextBox x:Name="IDBarangTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tanggal Perawatan:" Style="{StaticResource DialogLabelStyle}" Margin="0,0,10,10"/>
                <DatePicker x:Name="dpTanggalPerawatan" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Jenis Perawatan:" Style="{StaticResource DialogLabelStyle}" Margin="0,0,10,10"/>
                <TextBox x:Name="JenisPerawatanTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="NIPP Pelaksana:" Style="{StaticResource DialogLabelStyle}" Margin="0,0,10,10"/>
                <TextBox x:Name="NIPPTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Catatan:" Style="{StaticResource DialogLabelStyle}" VerticalAlignment="Top" Margin="0,5,10,10"/>
                <TextBox x:Name="CatatanTextBox" Grid.Row="4" Grid.Column="1" 
                         MinHeight="80" TextWrapping="Wrap" AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"
                         VerticalContentAlignment="Top" Padding="8,5"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="Simpan" Content="Simpan" Style="{StaticResource PrimaryDialogButtonStyle}" Click="Simpan_Click"/>
                <Button x:Name="Batal" Content="Batal" Style="{StaticResource SecondaryDialogButtonStyle}" Click="Batal_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>