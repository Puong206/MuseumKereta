<Window x:Class="MuseumApp.InputDialogPerawatan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuseumApp"
        mc:Ignorable="d" Height="450" Width="800">
    <Grid x:Name="Input_DialogPerawatan">
        <Image Margin="0,0,0,0"
            Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
            Stretch="Fill" Opacity="0.6">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Frame HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="364"
               Background="#FFF0F2F4">
            <Frame.Content>
                <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="34,20,34,20">
                    <TextBlock Text="Perawatan"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,16"
                     VerticalAlignment="Top"
                     FontFamily="Plus Jakarta Sans Bold"
                     FontSize="20"
                     FontStyle="Normal"
                     Foreground="#2D2B70"
                     LineHeight="20"/>

                    <TextBlock x:Name="txtIDBarang" Text="ID Barang" Margin="0,4,0,2"
                               RenderTransformOrigin="-0.711,0.67"
                               Width="200"
                               FontFamily="Plus Jakarta Sans Medium"
                               Foreground="#2D2B70"/>
                    <TextBox x:Name="IDBarangTextBox"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             Width="204"
                             Background="#FFD9D9D9"/>

                    <TextBlock x:Name="txtTanggalPerawatan" Text="Tanggal Perawatan" Margin="0,4,0,2"
                               RenderTransformOrigin="-0.711,0.67"
                               Width="200"
                               FontFamily="Plus Jakarta Sans Medium"
                               Foreground="#2D2B70"/>
                    <DatePicker x:Name="dpTanggalPerawatan"
                                FontFamily="Plus Jakarta Sans Medium"
                                Background="#FFD9D9D9"
                                Foreground="#2D2B70"/>

                    <TextBlock x:Name="txtJenisPerawatan" Text="Jenis Perawatan" Margin="0,4,0,2"
                            RenderTransformOrigin="-0.711,0.67"
                            Width="200"
                            FontFamily="Plus Jakarta Sans Medium"
                            Foreground="#2D2B70"/>
                    <TextBox x:Name="JenisPerawatanTextBox"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          Width="204"
                          Background="#FFD9D9D9"/>

                    <TextBlock x:Name="txtCatatan" Text="Catatan" Margin="0,4,0,2"
                            RenderTransformOrigin="-0.711,0.67"
                            Width="200"
                            FontFamily="Plus Jakarta Sans Medium"
                            Foreground="#2D2B70"/>
                    <TextBox x:Name="CatatanTextBox"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          Width="204"
                          Background="#FFD9D9D9"/>

                    <TextBlock x:Name="txtNIPP" Text="NIPP" Margin="0,4,0,2"
                            RenderTransformOrigin="-0.711,0.67"
                            Width="200"
                            FontFamily="Plus Jakarta Sans Medium"
                            Foreground="#2D2B70"/>
                    <TextBox x:Name="NIPPTextBox"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          Width="204"
                          Background="#FFD9D9D9"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="Simpan" Content="Simpan"
                             FontFamily="Plus Jakarta Sans Bold"
                             Foreground="#ffffff"
                             Width="60"
                             Height="20"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,16,8,2" BorderBrush="{x:Null}"
                             Background="#FFF26924"
                             Click="Simpan_Click"/>
                        <Button x:Name="Batal" Content="Batal"
                             FontFamily="Plus Jakarta Sans Bold"
                             Foreground="#FFF26924"
                             Width="60"
                             Height="20"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,16,0,2" BorderBrush="{x:Null}"
                             Background="White"
                             Click="Batal_Click"/>
                    </StackPanel>
                </StackPanel>
            </Frame.Content>
        </Frame>
    </Grid>
</Window>
