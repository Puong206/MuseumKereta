<UserControl x:Class="MuseumApp.Page1"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:local="clr-namespace:MuseumApp"
     mc:Ignorable="d" 
     d:DesignHeight="600" d:DesignWidth="920">

    <Grid Background="White">
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Height="200" Background="White"/>
        
        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
              Stretch="Fill"
              Width="920"
              Height="600"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Opacity="0.75">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Rectangle HorizontalAlignment="Center"
                  Height="500"
                  Width="800"
                  VerticalAlignment="Center" Fill="White" Opacity="0.4">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid HorizontalAlignment="Left"
             Width="172"
             Margin="72,160,0,62">

            <Border Background="White"
                   CornerRadius="20,20,20,20" />

            <StackPanel Width="140"
                       Grid.Row="1"
                       Margin="0,52,0,0">
                <Button x:Name="ButtonKoleksi" Content="Kelola Koleksi"
                        Height="50"
                        Width="140"
                        FontSize="14"
                        FontFamily="Plus Jakarta Sans Semibold"
                        VerticalAlignment="Center"
                        Foreground="#FF2D2B70" Click="ButtonKoleksi_Click" BorderBrush="{x:Null}" Background="{x:Null}"/>

                <Button x:Name="ButtonBarang" Content="Kelola Barang"
                        Height="50"
                        Width="140"
                        FontSize="14"
                        FontFamily="Plus Jakarta Sans Semibold"
                        VerticalAlignment="Center"
                        Foreground="#FF2D2B70" Click="ButtonBarang_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>

                <Button x:Name="ButtonPegawai" Content="Kelola Pegawai"
                        Height="50"
                        Width="140"
                        FontSize="14"
                        FontFamily="Plus Jakarta Sans Semibold"
                        VerticalAlignment="Center"
                        Foreground="#FF2D2B70" Click="ButtonPegawai_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>


                <Button x:Name="ButtonPerawatan" Content="Kelola Perawatan"
                        Height="50"
                        Width="140"
                        FontSize="14"
                        FontFamily="Plus Jakarta Sans Semibold"
                        VerticalAlignment="Center"
                        Foreground="#FF2D2B70" Click="ButtonPerawatan_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </StackPanel>

        </Grid>

        <Border Background="White"
                Height="85"
                Margin="72,60,72,451"
                CornerRadius="20,20,20,20">
            <TextBlock TextWrapping="Wrap"
                       Text="Pendataan Museum Kereta Api"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Plus Jakarta Sans Bold"
                       FontSize="40"
                       FontStyle="Normal"
                       Foreground="#2D2B70"
                       LineHeight="20"/>
        </Border>



    </Grid>

</UserControl>
