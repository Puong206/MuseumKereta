<Page x:Class="MuseumApp.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuseumApp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="920"
      Title="Dashboard Utama" >

    <Page.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Semibold"/>
            <Setter Property="Foreground" Value="#FF2D2B70"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="5" Padding="10,0,10,0">
                            <Border.Background>
                                <SolidColorBrush x:Name="ButtonBackgroundBrush" Color="Transparent"/>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="ButtonBackgroundBrush" 
                                                        Storyboard.TargetProperty="Color" 
                                                        To="#192D2B70" 
                                                        Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="ButtonBackgroundBrush" 
                                                        Storyboard.TargetProperty="Color" 
                                                        To="Transparent" 
                                                        Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#332D2B70"/>
                            </Trigger>

                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2D2B70"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Semibold"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1AD32F2F"/>
                    <Setter Property="Foreground" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#33D32F2F"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFC0C8D8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Semibold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF2D2B70"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>

        <Style x:Key="SidebarMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2D2B70"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200" MaxWidth="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
               Stretch="UniformToFill" Opacity="0.75"
               Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Image.Effect>
                <BlurEffect Radius="7"/>
            </Image.Effect>
        </Image>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Background="#CCFFFFFF" MinHeight="70"
                Margin="15,15,15,5"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Opacity="0.2" BlurRadius="5" ShadowDepth="1"/>
            </Border.Effect>
            <TextBlock Text="Pendataan Museum Kereta Api"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontFamily="Plus Jakarta Sans Bold" FontSize="30"
                       Foreground="#2D2B70"
                       Padding="20,10,20,10"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="0"
                Background="#B3FFFFFF" Margin="15,5,5,15"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Opacity="0.2" BlurRadius="5" ShadowDepth="1"/>
            </Border.Effect>
            <DockPanel Margin="10,10,10,0">
                <StackPanel DockPanel.Dock="Bottom" Margin="0,0,0,10">
                    <Separator Margin="0,10,0,10" Opacity="0.5"/>
                    <Button x:Name="ButtonLogout" Content="Logout" Style="{StaticResource LogoutButtonStyle}" Click="ButtonLogout_Click"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top" Margin="0,10,0,0">
                    <Button x:Name="ButtonKoleksi" Content="Kelola Koleksi" Style="{StaticResource SidebarButtonStyle}" Click="ButtonKoleksi_Click"/>
                    <Button x:Name="ButtonBarang" Content="Kelola Barang" Style="{StaticResource SidebarButtonStyle}" Click="ButtonBarang_Click"/>
                    <Button x:Name="ButtonPegawai" Content="Kelola Pegawai" Style="{StaticResource SidebarButtonStyle}" Click="ButtonPegawai_Click"/>
                    <Button x:Name="ButtonPerawatan" Content="Kelola Perawatan" Style="{StaticResource SidebarButtonStyle}" Click="ButtonPerawatan_Click"/>
                    <Button x:Name="ButtonImportData" Content="Import Data" Style="{StaticResource SidebarButtonStyle}" Click="ButtonImportData_Click"/>
                    <Button x:Name="ButtonReportExport" Style="{StaticResource SidebarButtonStyle}" Click="ButtonReportExport_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Laporan &amp; Ekspor" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="&#x25BC;" FontFamily="Arial" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="10"/>
                        </Grid>
                        <Button.ContextMenu>
                            <ContextMenu Style="{StaticResource SidebarContextMenuStyle}">
                                <MenuItem Header="Laporan Barang" Style="{StaticResource SidebarMenuItemStyle}" Click="LaporanBarang_Click"/>
                                <MenuItem Header="Laporan Perawatan" Style="{StaticResource SidebarMenuItemStyle}" Click="LaporanPerawatan_Click"/>
                                <MenuItem Header="Laporan Pegawai" Style="{StaticResource SidebarMenuItemStyle}" Click="LaporanPegawai_Click"/>
                                <MenuItem Header="Laporan Koleksi" Style="{StaticResource SidebarMenuItemStyle}" Click="LaporanKoleksi_Click"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1"
                Background="#99FFFFFF" Margin="5,5,15,15"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Opacity="0.1" BlurRadius="5" ShadowDepth="1"/>
            </Border.Effect>
            <Frame x:Name="MainContentFrame"
                   NavigationUIVisibility="Hidden"
                   JournalOwnership="UsesParentJournal"/>
        </Border>
    </Grid>
</Page>