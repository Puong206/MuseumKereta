<Page x:Class="MuseumApp.Kelola_Perawatan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuseumApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kelola_Perawatan">

    <Grid Background="White">
        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
               Stretch="Fill"
               Width="920"
               Height="600"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Opacity="0.75">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Rectangle HorizontalAlignment="Center"
                   Height="500" 
                   Width="800"
                   VerticalAlignment="Center"
                   Fill="White" Opacity="0.4">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid Margin="20,20,20,20">
            <Border Background="White"
                    CornerRadius="20,20,20,20">
            </Border>
            <TextBlock Text="Kelola Perawatan"
                       HorizontalAlignment="Left"
                       Margin="128,20,0,0"
                       VerticalAlignment="Top"
                       FontFamily="Plus Jakarta Sans Bold"
                       FontSize="28"
                       Foreground="#2D2B70"/>

            <Button x:Name="BtnBack" Content="← Kembali"
        FontFamily="Plus Jakarta Sans Bold"
        FontSize="14"
        Height="32"
        Width="100"
        Background="Transparent"
        Foreground="#2D2B70"
        BorderBrush="#2D2B70"
        Margin="20,20,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Click="BtnBack_Click"/>

            <StackPanel Orientation="Horizontal" Margin="40,60,40,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="720">
                <StackPanel Margin="5" Width="100">
                    <TextBlock Text="ID Barang" FontWeight="Bold"/>
                    <TextBox x:Name="txtIDBarang"/>
                </StackPanel>
                <StackPanel Margin="5" Width="140">
                    <TextBlock Text="Tanggal Perawatan" FontWeight="Bold"/>
                    <DatePicker x:Name="dpTanggalPerawatan"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <TextBlock Text="Jenis Perawatan" FontWeight="Bold"/>
                    <TextBox x:Name="txtJenisPerawatan"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <TextBlock Text="Catatan" FontWeight="Bold"/>
                    <TextBox x:Name="txtCatatan"/>
                </StackPanel>
                <StackPanel Margin="5" Width="100">
                    <TextBlock Text="NIPP" FontWeight="Bold"/>
                    <TextBox x:Name="txtNIPP"/>
                </StackPanel>
            </StackPanel>


            <DataGrid x:Name="dataGridPerawatan" FontFamily="Plus Jakarta Sans Medium" AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionMode="Single" SelectionUnit="FullRow" Margin="20,75,20,75" SelectionChanged="dataGridPerawatan_SelectionChanged" Background="White" BorderBrush="{x:Null}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID Perawatan" Binding="{Binding PerawatanID}" Width="Auto"/>
                    <DataGridTextColumn Header="ID Barang" Binding="{Binding BarangID}"/>
                    <DataGridTextColumn Header="Tanggal Perawatan" Binding="{Binding TanggalPerawatan}" Width="Auto"/>
                    <DataGridTextColumn Header="Jenis Perawatan" Binding="{Binding JenisPerawatan}"/>
                    <DataGridTextColumn Header="Catatan" Binding="{Binding Catatan}"/>
                    <DataGridTextColumn Header="NIPP" Binding="{Binding NIPP}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="BtnTambah" Content="Tambah"
                    FontFamily="Plus Jakarta Sans Bold"
                    FontSize="16"
                    Height="36"
                    Width="136"
                    Background="#FF2D2B70"
                    Foreground="White"
                    Margin="107,352,517,22" Click="BtnTambah_Click"/>

            <Button x:Name="BtnEdit" Content="Edit"
                    FontFamily="Plus Jakarta Sans Bold"
                    FontSize="16"
                    Height="36" 
                    Width="136"
                    Background="White"
                    Foreground="#F26924"
                    Margin="312,352,312,22"
                    BorderBrush="#FF2D2B70" Click="BtnEdit_Click"/>

            <Button x:Name="BtnHapus" Content="Hapus"
                    FontFamily="Plus Jakarta Sans Bold"
                    FontSize="16"
                    Height="36"
                    Width="136"
                    Background="#F26924"
                    Foreground="White"
                    Margin="505,352,119,22" Click="BtnHapus_Click"/>
        </Grid>
        
    </Grid>
</Page>
