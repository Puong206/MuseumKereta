<Page x:Class="MuseumApp.ReportExport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuseumApp"
      xmlns:wf="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Laporan &amp; Ekspor" Loaded="Page_Loaded">

    <Page.Resources>
        <BlurEffect x:Key="PageBlurEffect" Radius="7"/>
        <DropShadowEffect x:Key="CardShadowEffect" ShadowDepth="2" BlurRadius="10" Color="#FFBBBBBB" Opacity="0.3"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Padding" Value="18,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2D2B70"/>
            <Setter Property="BorderBrush" Value="#FFA0A0A0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0A2D2B70"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg"
               Stretch="UniformToFill" 
               Opacity="0.60" Effect="{StaticResource PageBlurEffect}"/>

        <Border Background="#EBFFFFFF" 
                CornerRadius="15" 
                Margin="30"
                Effect="{StaticResource CardShadowEffect}">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnBack" Content="← Kembali" 
                            Style="{StaticResource BackButtonStyle}" 
                            Click="BtnBack_Click"/>

                    <TextBlock Text="Laporan &amp; Ekspor Barang"
                               Grid.Column="1"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontFamily="Plus Jakarta Sans Bold" FontSize="26" 
                               Foreground="#2D2B70"/>
                </Grid>

                <WindowsFormsHost>
                    <rv:ReportViewer x:Name="ReportViewer" />
                </WindowsFormsHost>

            </Grid>
        </Border>
    </Grid>
</Page>