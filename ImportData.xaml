<Page x:Class="MuseumApp.ImportData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MuseumApp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Import Data">

    <Page.Resources>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="18,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2D2B70"/>
            <Setter Property="BorderBrush" Value="#FFA0A0A0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0A2D2B70"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Plus Jakarta Sans Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF2D2B70"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A479A"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Image Source="/Images/cover-2-1-b4c03b57f59f99cfb01ec83c400ae689_600x400.jpg" Stretch="UniformToFill" Opacity="0.60"/>

        <Border Background="#EBFFFFFF" CornerRadius="15" Margin="30">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Button x:Name="BtnBack" Content="← Kembali" Style="{StaticResource BackButtonStyle}" Click="BtnBack_Click" VerticalAlignment="Bottom"/>
                    <TextBlock Text="Import Data" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Plus Jakarta Sans Bold" FontSize="26" Foreground="#2D2B70"/>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="1. Pilih Jenis Data untuk Diimpor:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="CmbEntityType" Width="200" Height="32" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="2. Pilih File Excel (.xlsx):" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TxtFilePath" Width="300" Height="32" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            <Button x:Name="BtnPilihFile" Content="..." Width="40" Margin="5,0,0,0" Style="{StaticResource PrimaryButtonStyle}" Height="32" Click="BtnPilihFile_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <DataGrid x:Name="PreviewDataGrid" Grid.Row="2" IsReadOnly="True" Margin="0,0,0,15"/>

                <Grid Grid.Row="3">
                    <TextBlock x:Name="StatusText" VerticalAlignment="Center" HorizontalAlignment="Left" FontStyle="Italic" Foreground="Gray"/>
                    <Button x:Name="BtnImport" Content="Import" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Right" IsEnabled="False" Click="BtnMulaiImport_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
